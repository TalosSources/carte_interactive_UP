version: "3.8"

services:
  nginx:
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./gitver:/var/www/gitver
  api:
    environment:
      - HOST=smartakartan.entrop.mywire.org
      - SCHEME=https
    volumes:
      - /var/lib/smartakartan/smartakartan-cd/cache:/code/cache
  web:
    volumes:
      - ./react-frontend:/react-frontend-plain:z