services:
  db:
    volumes: []

  api:
    environment:
      - HOST=smartakartan.entrop.mywire.org
      - SCHEME=https
      - MEDIA_ROOT=/var/lib/smartakartan/media
    volumes:
      - ./cache:/code/cache
      - ./media:/media
  
  web:
    build:
      context: ./react-frontend
      dockerfile: Dockerfile.reactprod
    depends_on:
      - api
    ports:
      - 80:80
    volumes:
      - ./gitver:/usr/share/index/html